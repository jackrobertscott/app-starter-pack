{
  "compilerOptions": {
    // Input
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "jsx": "react-jsx",

    // Output
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",

    // Import/Export
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Paths
    "baseUrl": "..",
    "paths": {
      "@browser/*": ["browser/src/*"],
      "@shared/*": ["shared/src/*"],
      "@server/*": ["server/src/*"]
    }
  },
  "include": ["src", "../shared/src"],
  "exclude": ["node_modules"]
}
