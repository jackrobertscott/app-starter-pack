{
  "compilerOptions": {
    // Input
    "lib": ["ESNext"],
    "target": "ESNext",

    // Output
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "build",

    // Import/Export
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Paths
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
